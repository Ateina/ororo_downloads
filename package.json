{
  "name": "ororo",
  "version": "1.0.0",
  "description": "Firefox extention that helps to download episodes on two clicks from ororo.tv",
  "main": "background.js",
  "scripts": {
    "build": "npm run ts:compile:content && npm run ts:compile:popup",
    "ts:compile:background": "tsc --out background.js ./Typescript/Background/background.ts",
    "ts:compile:content": "tsc --out script.js ./Typescript/Content/script.ts",
    "ts:compile:popup": "tsc --out ./Popup/popup.js ./Popup/popup.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ateina/ororo_downloads.git"
  },
  "author": "Ateina",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ateina/ororo_downloads/issues"
  },
  "homepage": "https://github.com/Ateina/ororo_downloads#readme",
  "devDependencies": {
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "web-ext-types": "^2.1.0"
  }
}
