{
  "manifest_version": 2,
  "name": "Ororo",
  "version": "1.2",
  "description": "Download media files from the page automaticly.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://ororo.tv/*"
      ],
      "js": [
        "script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "38": "icons/border-48.png"
    },
    "default_title": "Download series",
    "default_popup": "Popup/popup.html"
  }
}